<div class="container">
  <% obj.each do |article| %>
        <p class="text-muted">
          <% if article.user %>
            by <%= link_to article.user.username, user_path(article.user) %>
          <% end %>
        </p>
        <%= link_to article_path(article) do %>
        <strong> <%= article.article_title %> </strong>
        <p> <%= article.article_description[0..100] %> </p>
      <% end %>
      <% if logged_in? && article.user == current_user %>
        <div class="article-actions">
          <%= link_to 'Edit', edit_article_path(article)%>
           <%= link_to("Delete", article, data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }) %>
          <%# <%= button_to "Delete", article_path(article), method: :delete %>
        </div>
        <% end %>

        <%# <%= render 'article_actions' %>
      <hr />
    </div>
  <% end %>
</div>
