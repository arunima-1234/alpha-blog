<%= form_with(model: @user, local: true) do |form| %>

  <p><%= form.label :Username %>
    <%= form.text_field :username, placeholder: "Enter your username" %>
  </p>

  <p><%= form.label :Email %>
    <%= form.email_field :email, placeholder: "Enter your email" %>
  </p>

  <p><%= form.label :Password %>
    <%= form.password_field :password, placeholder: "Choose a password" %>
  </p>


  <p><%= form.submit(@user.new_record? ? "Sign up" : "Update Profile") %>
  </p>


<% end %>
